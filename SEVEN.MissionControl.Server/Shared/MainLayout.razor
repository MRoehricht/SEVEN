@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(e => DrawerToggle())"/>
        SEVEN - Sandberg Electric Vehicle Eden Network
        <MudSpacer/>
        <MudToggleIconButton @bind-Toggled="@_isDarkMode"
                             Icon="@Icons.Material.Filled.DarkMode" Color="@Color.Default" Title="Off"
                             ToggledIcon="@Icons.Material.Filled.LightMode" ToggledColor="@Color.Default" ToggledTitle="On"/>       
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/MRoehricht/SEVEN" Target="_blank"/>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="@DrawerClipMode.Always" Breakpoint="@Breakpoint.Sm" OpenMiniOnHover="true" Elevation="1" Variant="@DrawerVariant.Mini">
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home" href="">Home</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard" href="dashboard">Dashboard</MudNavLink>
            <MudNavLink Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Task" href="rovertasks">Rovertasks</MudNavLink>
            <MudNavLink Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List" href="fetchdata">Messdaten</MudNavLink>           
            <MudNavGroup Title="Diagramme" Icon="@Icons.Material.Filled.SsidChart" Expanded="true">
                <MudNavLink Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.DeviceThermostat" href="counter">Temperatur</MudNavLink>
                @*<MudNavLink Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.WbSunny" href="counter">UV-Index</MudNavLink>  *@              
            </MudNavGroup>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private readonly MudTheme _theme = new();
    private bool _isDarkMode;
    private bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}